<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/icebergbackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginBottom="25dp"
                  android:layout_marginTop="10dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_width="fill_parent"
                      android:layout_height="0dp">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/game_level"
                    android:textColor="#002060"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    />
            <TextView
                    android:id="@+id/numberLevel"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textColor="#002060"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_width="fill_parent"
                      android:layout_height="0dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                              android:orientation="horizontal"
                                              android:layout_weight="2"
                                              android:layout_width="0dp"
                                              android:layout_height="fill_parent">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/game_moves"
                        android:textColor="#002060"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        />
                <TextView
                        android:id="@+id/numberMoves"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#002060"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="0"
                        />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_weight="2"
                          android:layout_width="0dp"
                          android:layout_height="fill_parent">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/game_best"
                        android:textColor="#002060"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
                <TextView
                        android:id="@+id/numberBest"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="0"
                        android:textColor="#002060"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
            </LinearLayout>
        </LinearLayout>

        <net.paolorovelli.IceJam.DrawView
                android:layout_weight="8"
                android:id="@+id/drawView"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>