<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/icebergbackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp"
                  android:layout_marginBottom="25dp"
                  android:layout_marginTop="10dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_width="fill_parent"
                      android:layout_height="0dp">
            <TextView
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/game_level"
                    android:textColor="#002060"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    />
            <TextView
                    android:id="@+id/numberLevel"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="8dp"
                    android:text="0"
                    android:textColor="#002060"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_width="fill_parent"
                      android:layout_height="0dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_weight="2"
                          android:layout_width="0dp"
                          android:layout_height="fill_parent">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/game_moves"
                        android:textColor="#002060"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:gravity="left"
                        />
                <TextView
                        android:id="@+id/numberMoves"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="0"
                        />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_weight="2"
                          android:layout_width="0dp"
                          android:layout_height="fill_parent">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/game_best"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
                <TextView
                        android:id="@+id/numberBest"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="0"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_weight="1"
                      android:layout_width="fill_parent"
                      android:layout_height="0dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_weight="2"
                          android:layout_width="0dp"
                          android:layout_height="fill_parent">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/game_timer"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="left"
                        />
                <TextView
                        android:id="@+id/timer"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="0"
                        />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="horizontal"
                          android:layout_weight="2"
                          android:layout_width="0dp"
                          android:layout_height="fill_parent">
                <TextView
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="@string/game_timer_best"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
                <TextView
                        android:id="@+id/timerBest"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="0"
                        android:textColor="#002060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        />
            </LinearLayout>
        </LinearLayout>

        <net.paolorovelli.IceJam.DrawView
                android:layout_weight="8"
                android:id="@+id/drawView"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_weight="1.5"
                      android:layout_height="0dp"
                      android:layout_width="fill_parent"
                      android:gravity="center_horizontal">

            <Button
                    android:id="@+id/buttonPrevious"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="buttonClick"
                    android:soundEffectsEnabled="true"
                    android:background="@drawable/previous"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="10px"
                    />

            <Button
                    android:id="@+id/buttonNext"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:onClick="buttonClick"
                    android:soundEffectsEnabled="true"
                    android:background="@drawable/next"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="10px"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>