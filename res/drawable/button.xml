<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <gradient
                    android:startColor="#E0F1FF"
                    android:centerColor="#C0E1FF"
                    android:endColor="#82C0FF"
                    android:angle="270"
                    />
            <stroke
                    android:width="1.2dp"
                    android:color="#002060" />
            <corners
                    android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <gradient
                    android:startColor="#E0F1FF"
                    android:centerColor="#C0E1FF"
                    android:endColor="#82C0FF"
                    android:angle="270"
                    />
            <stroke
                    android:width="1.2dp"
                    android:color="#002060" />
            <corners
                    android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <gradient
                    android:startColor="#E0F1FF"
                    android:centerColor="#C0E1FF"
                    android:endColor="#82C0FF"
                    android:angle="270"
                    />
            <stroke
                    android:width="1.2dp"
                    android:color="#002060" />
            <corners
                    android:radius="15dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <gradient
                    android:startColor="#4181C0"
                    android:centerColor="#002060"
                    android:endColor="#001040"
                    android:angle="270"
                    />
            <stroke
                    android:width="1.2dp"
                    android:color="#002060" />
            <corners
                    android:radius="15dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                    android:left="4dp"
                    android:top="4dp"
                    android:right="4dp"
                    android:bottom="4dp"
                    />
        </shape>
    </item>
</selector>